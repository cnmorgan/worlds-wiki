<% @page_title = "New World" %>

<div class="container form-container">
  <%= form_for @new_world, url: user_worlds_path(params[:username]) do |f| %>
    <%= render 'shared/error_messages', errors: flash[:errors] %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group form-check">
    <%= f.check_box :is_private, class: 'form-check-input', id: 'private-box' %> 
    <%= f.label :private?, class: "form-check-label", for: "private-box"%>
    </div>
    <div class="form-group">
      <%= f.submit "Create!", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>