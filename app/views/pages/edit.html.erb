<% @page_title = "#{@page.title}: Edit" %>

<div class="container form-container">
  <%= form_for @page, url: world_page_path(params[:world_name], @page.title) do |f| %>
    <%= render 'shared/error_messages', errors: flash[:errors] %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, value: @page.title, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :summary %>
      <%= f.text_area :summary, :cols => 300, :rows => 15, value: @page.summary, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, :cols => 250, :rows => 20, value: @page.content, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Update!", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
