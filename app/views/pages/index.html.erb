<% @page_title = "#{@world.name}'s pages" %>

<div class="row-even">

    <table class="table">
        <thead class="">
        <tr>
            <th scope="col">Title</th>
            <th scope="col"></th>
            <% if @world.is_admin?(current_user) %>
            <th scope="col"></th>
            <% end %>
        </tr>
        </thead>
        <tbody>
            <% @pages.order("title ASC").first(@first_amount).find_all do |page| %>
            <tr>
                <th> <%= page.title %> </th>
                <td> <%= link_to "view", world_page_path(encode(@world.name), encode(page.title)) %> </td>
                <% if @world.is_admin?(current_user) %>
                <td> <%= link_to "delete", world_page_path(encode(@world.name), encode(page.title)), method: :delete, data: { confirm: 'Are you sure?' } %> </td>
                <% end %>
            </tr>
            <% end %>
        </tbody>
    </table>


