<% @page_title = "#{@template.title}: Edit Template" %>

<div class="container form-container">
  <%= form_for :page_edit, url: user_template_path(params[:username], @template.title), method: :put, html: {style: "width: 100%"} do |f| %>
    <%= render 'shared/error_messages', errors: flash[:errors] %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, value: @defaults[:title], autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, value: @defaults[:content], class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Update!", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>