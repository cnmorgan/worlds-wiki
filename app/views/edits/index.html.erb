<% @page_title = @page.title + ": Edits" %>

<div class="row">
    <div class="col">
        <ul class="list-display">
        <% @edits.find_all do |edit| %>
            <li><%= link_to edit.user.username, user_path(edit.user.username) %><%= " - #{ edit.created_at.strftime("%Y-%m-%d")}" %></li>
        <% end %>
        </ul>
        <%= will_paginate @edits %>
    </div>
</div>