<% @page_title = "Login" %>

<div class="container form-container">

  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

    <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <span class="sub-title"><%= link_to "(forgot password)", new_password_reset_path %><span>
    </div>

    <div class="form-group form-check">
    <%= f.check_box :remember_me, class: 'form-check-input', id: 'remember-box' %> 
    <%= f.label :remember_me, class: "form-check-label", for: "remember-box"%>
    </div>

    <div class="form-group">
    <%= f.submit "Log in", class: "btn btn-primary"%>
    </div>

    <div>
      <span class='sub-title'>Don't have an account? <%= link_to "Sign up!", new_user_path %></span>
    </div>

  <% end %>

</div>